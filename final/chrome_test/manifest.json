{
    "manifest_version": 2,
    "name": "Cookie Reader",
    "version": "1.0",
    "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "hey"
    },
    "permissions": [
        "cookies",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "content_script.js"
    ],
    "host_permissions": [
        "https://www.facebook.com/",
        "http://localhost:3000/"
    ]
}